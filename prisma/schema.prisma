generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Criar uma migrations
// yarn prisma migrate dev

model Usuario {
  id        String    @id @default(uuid())
  tipo      String
  nome      String
  senha     String
  createdAt DateTime? @default(now())

  pedido Pedido[]

  @@map("usuarios")
}

model Produto {
  id           String    @id @default(uuid())
  codigo       String
  referencia   String
  nome         String
  cor          String
  tamanho      String
  entrada      Int
  saida        Int?      @default(0)
  separado     Int?      @default(0)
  valorAtacado String
  valorVarejo  String
  createdAt    DateTime? @default(now())
  updatedAt    DateTime? @default(now())

  orcamentos Orcamento[]

  @@map("produtos")
}

model Cliente {
  id             String    @id @default(uuid())
  cpf            String
  nome           String
  endereco       String
  whatsapp       String
  dataNascimento String
  createdAt      DateTime? @default(now())

  pedidos Pedido[]

  @@map("clientes")
}

model Pedido {
  id String @id @default(uuid())

  status    String   @default("Criado") // Separado, Despachado e Entregue
  Cliente   Cliente? @relation(fields: [clienteId], references: [id])
  clienteId String?

  orcamento Orcamento[]

  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())
  Usuario   Usuario?  @relation(fields: [usuarioId], references: [id])
  usuarioId String?

  @@map("pedidos")
}

model Orcamento {
  id         String @id @default(uuid())
  quantidade Int
  preco      String
  referencia String
  cor        String
  tamanho    String

  Produto   Produto @relation(fields: [produtoId], references: [id])
  produtoId String
  pedido    Pedido  @relation(fields: [pedidoId], references: [id])
  pedidoId  String

  createdAt DateTime? @default(now())

  @@map("orcamentos")
}
