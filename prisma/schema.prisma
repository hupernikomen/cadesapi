generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Criar uma migrations
// yarn prisma migrate dev

model Collaborator {
  id        String    @id @default(uuid())
  type      String
  name      String
  password  String
  createdAt DateTime? @default(now())

  salesForm SalesForm[]

  @@map("collaborators")
}

model Product {
  id          String    @id @default(uuid())
  code        String
  ref         String
  name        String
  color       String
  size        String
  add     Int
  out         Int?      @default(0)
  reserved    Int?      @default(0)
  valueResale String
  valueRetail String
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @default(now())

  budget Budget[]

  @@map("products")
}

model Client {
  id        String    @id @default(uuid())
  cpf_cnpj  String
  name      String
  country   String
  whatsapp  String
  birthDate String
  createdAt DateTime? @default(now())

  salesForm SalesForm[]

  @@map("clients")
}

model SalesForm {
  id String @id @default(uuid())

  state    String   @default("Open") // Created Reserved Concluded
  client   Client? @relation(fields: [clientID], references: [id])
  clientID String?

  budget Budget[]

  createdAt      DateTime?     @default(now())
  updatedAt      DateTime?     @default(now())
  collaborator   Collaborator? @relation(fields: [collaboratorID], references: [id])
  collaboratorID String?

  @@map("salesforms")
}

model Budget {
  id         String @id @default(uuid())
  amount Int
  price      String
  ref String
  color        String
  size    String

  product     Product   @relation(fields: [productID], references: [id])
  productID   String
  salesForm   SalesForm @relation(fields: [salesformID], references: [id])
  salesformID String

  createdAt DateTime? @default(now())

  @@map("budgets")
}
